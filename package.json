{
  "name": "classpoint",
  "version": "1.0.0",
  "private": true,
  "homepage": "./",
  "scripts": {
    "start": "npx concurrently \"npm run watch:css\" \"npm run react-start\" \"wait-on http://localhost:3000 && npm run electron-start\"",
    "react-start": "react-scripts start",
    "electron-start": "electron .",
    "build": "npm run build:css && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:css": "tailwindcss -i ./src/index.css -o ./src/tailwind.css",
    "watch:css": "tailwindcss -i ./src/index.css -o ./src/tailwind.css --watch",
    "dist": "electron-builder",
    "electron-build": "rimraf dist APP-win32-x64 ClassPoint-win32-x64 && npm run build && npm run dist"
  },
  "main": "electron.cjs",
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "file-saver": "^2.0.5",
    "firebase": "^12.5.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.552.0",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.18",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^24.13.3",
    "postcss-cli": "^11.0.1",
    "react-scripts": "^5.0.1",
    "rimraf": "^6.1.2",
    "wait-on": "^9.0.3"
  },
  "overrides": {
    "nth-check": "^2.1.1",
    "postcss": "^8.5.6",
    "webpack-dev-server": "^5.2.2"
  },
  "build": {
    "appId": "com.classpoint.app",
    "productName": "ClassPoint",
    "asar": false,
    "extends": "react-cra",
    "files": [
      "build",
      "public/electron.js",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ClassPoint"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}